    failure_status: ERROR
  }

  check_trailing_whitespace: {
    failure_status: ERROR
  }

  # Presubmit applied during submit

  check_lint: {
    action: SUBMIT  # Do not activate by default to not block TAP.
    failure_status: ERROR
  }

  # Ensures that the string "do not submit" (in all caps) is not present.
  check_do_not_submit: {
    action: SUBMIT
  }
}

